{
  "name": "ni18n",
  "version": "1.0.0",
  "description": "Simple NextJS integration with i18next",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "nodemon --watch src --ignore 'src/**/*.test.*' --ext ts,tsx,json --exec yarn build",
    "build": "tsc --project tsconfig.build.json && yarn cp:backend",
    "cp:backend": "cp src/use-backend/package.json dist/use-backend/package.json",
    "test": "jest"
  },
  "author": "Jose Quintas <juniorquintas@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "peerDependencies": {
    "i18next": ">=20.0.0",
    "next": ">=10.0.0",
    "react": ">=16.8.0",
    "react-i18next": ">= 11.0.0"
  },
  "dependencies": {
    "hoist-non-react-statics": "^3.3.2",
    "i18next-fs-backend": "^1.1.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/i18next-fs-backend": "^1.0.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^16.0.0",
    "@types/react": "^17.0.13",
    "@types/react-dom": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-react": "^7.24.0",
    "i18next": "^20.3.2",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.0",
    "next": "^11.0.1",
    "nodemon": "^2.0.9",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.11.0",
    "simple-git-hooks": "^2.5.1",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,yaml,yml,css,md}": "prettier --write"
  }
}
